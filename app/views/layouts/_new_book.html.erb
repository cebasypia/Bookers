<h2>New book</h2>
<% book = Book.new %>
<%= form_with model: book do |f| %>
  <div class="field row">
    <%= f.label :title, "Title"%>
    <%= f.text_field :title, class: "col-xs-12"%><br>
  </div>
  <div class="field row">
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body, class: "col-xs-12" %><br>
  </div>
  <div class="actions row">
    <%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %>
  </div>
<% end %>
