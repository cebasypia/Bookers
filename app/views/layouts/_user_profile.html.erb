<% user = current_user if user == nil %>
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "col-12"%>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<% if user == current_user %>
  <%= link_to edit_user_registration_path, class: "col-12 btn page-link text-dark" do %>
    <i class="fas fa-wrench"></i>
  <% end %>
<% end %>
