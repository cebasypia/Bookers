<div class="row">
  <div class="col-xs-3">
    <%= render partial: 'layouts/user_profile', locals: { user: @user } %>
    <%= render 'layouts/new_book' %>
  </div>
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th class="col-xs-3"></th>
          <th class="col-xs-3">Title</th>
          <th class="col-xs-4">Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
