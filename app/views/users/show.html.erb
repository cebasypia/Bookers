<div class="row">
  <div class="col-sm-3">
    <%= render 'layouts/sidebar', book: @book %>
  </div>
  <div class="col-sm-9">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <%# FIXME:ã€€style %>
          <th style="width:25%;"></th>
          <th style="width:25%;">Title</th>
          <th style="width:50%;">Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag 'no_image.jpg' %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>